<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SectionActivity" >

    

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/activity_bottom_height" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/ll_line_below"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_bottom_height"
        android:background="@color/lightgray"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_bottom_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/APPBottomColor"
        android:orientation="horizontal" >
        
        <TextView 
            android:id="@+id/tv_notebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/mr"
            android:textSize="@dimen/APPTextSizeBig"
            android:textColor="@color/APPDefaultTextColor" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio0"
                style="@style/main_tab_bottom"
                android:drawableTop="@drawable/campus" />

            <RadioButton
                android:id="@+id/radio1"
                style="@style/main_tab_bottom"
                android:drawableTop="@drawable/campus" />

            <RadioButton
                android:id="@+id/radio2"
                style="@style/main_tab_bottom"
                android:drawableTop="@drawable/campus" />
        </RadioGroup>
    </RelativeLayout>

</RelativeLayout>
